<div class="container">
  <div class="challenges-title">
    <h1><%= @challenge.name %> </h1>

    <h2>Exercises</h2>
 </div>
 <div class="exercises-cards">
  <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url()">
    <ul>
      <% @exercises.each do |exercise|%>
        <li>
          <%= link_to exercise.name, challenge_exercise_path(challenge_id: @challenge.id, id: exercise.id) %>
          <% if @completed_exercises.find_by(exercise_id: exercise.id, session_id: @session.id, completed: true) %>
            <i class="fa fa-solid fa-check"></i>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
