<div class="container">
  <div class="row justify-content-center">
    <div class="col-18 col-sm-6">

        <div class="form-login">

        <div style="text-align: center;">
          <%= image_tag "https://res.cloudinary.com/drirexwsz/image/upload/v1647425064/FluentChinese_Logo_Red_f8zrbd.svg", class: "logo" %>
        </div>

        <h3>Sign in to your account</h3>
        <h4>Or <%= link_to "Start Your Journey Today", new_registration_path(resource_name) %></h4>

         <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
          </div>

          <%= link_to "Forgot your password?", new_password_path(resource_name) %>
        <% end %>
        </div>
    </div>
  </div>
</div>
