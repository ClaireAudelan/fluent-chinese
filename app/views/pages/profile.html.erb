<div class="profile-container">
    <%= render 'shared/sidenavbar' %>

    <div class="profile-css">
    <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar-circle-large" %>
      <% elsif current_user.photo_url.present? %>
        <%= image_tag current_user.photo_url, class: "avatar-circle-large"%>
      <% else %>
        <%= image_tag "https://www.kindpng.com/picc/m/114-1140943_computer-icons-person-login-transparent-silhouette-icon-png.png", class: "avatar-square-large" %>
      <% end %>

      <div class="user-name-profile">
      <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
      </div>
      <br>
      <h2 class="completed-challenges">Completed Challenges:</h2>
      <br>
      <% @completed_challenges.each do |completed_challenge|%>
        <div class=”completed-challenge-name“>
          <h3><%= completed_challenge.name %></h3>
        </div>
        <div class="challenge-description">
        <%= completed_challenge.description %>
        </div>
      <% end %>

      <div class="social-media-buttons" style="padding-top: 15px">
        <%= link_to "#" do %>
          <i class="fab fa-twitter btn btn-primary"></i>
        <% end %>
        <%= link_to "#" do %>
          <i class="fab fa-linkedin btn btn-primary"></i>
        <% end %>
      </div>
    </div>
</div>
