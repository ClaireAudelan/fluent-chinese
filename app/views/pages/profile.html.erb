<div class="profile-container" >
    <%= render 'shared/sidenavbar' %>

    <div class="profile-css" style="position: relative">

      <% if current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key, class: "avatar-circle-large" %>
      <% elsif current_user.photo_url.present? %>
        <%= image_tag current_user.photo_url, class: "avatar-circle-large"%>
      <% else %>
        <%= image_tag "https://www.kindpng.com/picc/m/114-1140943_computer-icons-person-login-transparent-silhouette-icon-png.png", class: "avatar-circle-large" %>
      <% end %>

      <div class="user-name-profile">
      <h1><%= current_user.first_name %> <%= current_user.last_name %></h1>
      </div>
      <br>
      <h2 class="completed-challenges">Completed Challenges:</h2>
      <br>
      <div class ="complete-challenge-cards">
        <% @completed_challenges.each do |completed_challenge|%>
          <div class=”challenge-complete-card“ style="background: white;box-shadow: 2px 4px 5px rgba(0, 0, 0, 0.2);border-radius: 16px;transition: all .1s ease-in; padding: 24px; width: 600px; display: flex; align-items: center; justify-content: space-between; ">


            <h3><%= completed_challenge.name %></h3>
            <div class="challenge-complete">
              <i class="fas fa-check"></i>
            </div>
          </div>
        <% end %>
      </div>

      <div class="social-media-buttons" style="padding-top: 15px">
        <%= link_to "#" do %>
          <i class="fab fa-twitter btn btn-primary"></i>
        <% end %>
        <%= link_to "#" do %>
          <i class="fab fa-linkedin btn btn-primary"></i>
        <% end %>
      </div>
    </div>
</div>
