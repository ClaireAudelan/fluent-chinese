    <div class="reading">
      <% if @exercise.content_type == "Reading" %>
          <p>我叫Chris。我三十六岁。我是英国人。我有一个姐姐，她叫Emma。她三十八岁。</p>
          <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSdeeQKbYvKifsPSkhUHcdDHFGFVYuS5iDnEuNdQV9ZjsN_MTA/viewform?embedded=true" width="1000" height="500" frameborder="5" marginheight="0" marginwidth="0">Loading…</iframe>
          <h2>Now record yourself reading out the text from the reading exercise in Chinese and upload.</h2>
          <input type="file" accept="audio/*" capture id="recorder">
          <audio id="player" controls></audio>
      <% end %>
    </div>

    <div class="writing-form">
      <% if @exercise.content_type == "Writing" %>
        <iframe src="https://docs.google.com/forms/d/e/1FAIpQLSerPugJ2afuSxyblACZokweJa7PUfANNhGrxmsXE5M_8JVxLg/viewform?embedded=true" width="1000" height="500" frameborder="5"  marginheight="0" marginwidth="0">Loading…</iframe>
      <% end %>
    </div>
    <%# <div class="form-actions">
      <%= f.button :submit %>
    <%# </div> %>

     <% if @completed_exercise %>
      <div class="complete-exercise-button">
        <%= link_to "Complete exercise", exercise_completed_exercise_path(exercise_id: @exercise.id, id: @completed_exercise.id), method: :patch, class: "btn btn-primary #{@completed_exercise.completed ? 'disabled' : ''}" %>
      </div>
    <% end %>

</div>

