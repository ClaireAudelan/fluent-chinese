<div class="reading">

  <p><%=@exercise.description %></p>

  <div class="soundcloud">
    <iframe width="100%" height="100" scrolling="no" frameborder="no" src=<%= @exercise.content_url %> >
    </iframe>
    <div style="font-size: 10px; color: #cccccc;line-break: anywhere;word-break: normal;overflow: hidden;white-space: nowrap;text-overflow: ellipsis; font-family: Raleway,Lucida Grande,Lucida Sans Unicode,Lucida Sans,Garuda,Verdana,Tahoma,sans-serif;font-weight: 100;">
      <a href=<%= @exercise.content_url_ter %> title="Reading Text" target="_blank" style="color: #cccccc; text-decoration: none;">
      </a>
    </div>
  </div>

  <div class="typeform">
    <div data-tf-widget=<%= @exercise.content_url_bis %> data-tf-hide-headers data-tf-iframe-props="title=FluentChinese Reading Text 1" data-tf-medium="snippet" style="width:100%;height:500px;"></div><script src="//embed.typeform.com/next/embed.js"></script>
  </div>

  <div class="audio-recorder-task">

    <h3 style="color: white">Now record yourself reading out the text from the reading exercise in Chinese and download the recording to your device.</h3>

    <%= render "audio_recorder" %>

    <div class="holder">
      <div data-role="controls" class="controls-css">
        <button>Record</button>
      </div>
      <div data-role="recordings" class="recordings-css"></div>
    </div>

  </div>

  <script src="//mandarinspot.com/static/mandarinspot.min.js" charset="UTF-8"></script>
  <script>
    mandarinspot.annotate();
  </script>

</div>
